<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/green_84"
        app:fabCustomSize="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button"
        app:tint="@color/white" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="48dp" />

    <TextView
        android:id="@+id/all_layout"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/white_stroke_f616"
        app:layout_constraintEnd_toStartOf="@id/normal_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />

    <TextView
        android:id="@+id/normal_layout"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/white_f616"
        app:layout_constraintEnd_toStartOf="@id/error_layout"
        app:layout_constraintStart_toEndOf="@id/all_layout"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />

    <TextView
        android:id="@+id/error_layout"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/white_f616"
        app:layout_constraintEnd_toStartOf="@id/disconnect_layout"
        app:layout_constraintStart_toEndOf="@id/normal_layout"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />

    <TextView
        android:id="@+id/disconnect_layout"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/white_f616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/error_layout"
        app:layout_constraintTop_toBottomOf="@id/guideline1" />


    <TextView
        android:id="@+id/all_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textColor="@color/green_84"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/all_layout"
        app:layout_constraintEnd_toEndOf="@id/all_layout"
        app:layout_constraintStart_toStartOf="@id/all_layout"
        app:layout_constraintTop_toTopOf="@id/all_layout"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/all_text_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="全部"
        android:textColor="@color/black_33"
        app:layout_constraintBottom_toBottomOf="@id/all_layout"
        app:layout_constraintEnd_toEndOf="@id/all_layout"
        app:layout_constraintStart_toStartOf="@id/all_layout"
        app:layout_constraintTop_toTopOf="@id/all_text" />

    <TextView
        android:id="@+id/normal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26"
        android:textColor="@color/green_84"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/normal_layout"
        app:layout_constraintEnd_toEndOf="@id/normal_layout"
        app:layout_constraintStart_toStartOf="@id/normal_layout"
        app:layout_constraintTop_toTopOf="@id/normal_layout"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/normal_text_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="正常"
        android:textColor="@color/black_33"
        app:layout_constraintBottom_toBottomOf="@id/normal_layout"
        app:layout_constraintEnd_toEndOf="@id/normal_layout"
        app:layout_constraintStart_toStartOf="@id/normal_layout"
        app:layout_constraintTop_toTopOf="@id/normal_text" />

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="@color/red_04"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/error_layout"
        app:layout_constraintEnd_toEndOf="@id/error_layout"
        app:layout_constraintStart_toStartOf="@id/error_layout"
        app:layout_constraintTop_toTopOf="@id/error_layout"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/error_text_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="故障"
        android:textColor="@color/black_33"
        app:layout_constraintBottom_toBottomOf="@id/error_layout"
        app:layout_constraintEnd_toEndOf="@id/error_layout"
        app:layout_constraintStart_toStartOf="@id/error_layout"
        app:layout_constraintTop_toTopOf="@id/error_text" />

    <TextView
        android:id="@+id/disconnect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black_99"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/disconnect_layout"
        app:layout_constraintEnd_toEndOf="@id/disconnect_layout"
        app:layout_constraintStart_toStartOf="@id/disconnect_layout"
        app:layout_constraintTop_toTopOf="@id/disconnect_layout"
        app:layout_constraintVertical_bias="0.35" />

    <TextView
        android:id="@+id/disconnect_text_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="断连"
        android:textColor="@color/black_33"
        app:layout_constraintBottom_toBottomOf="@id/disconnect_layout"
        app:layout_constraintEnd_toEndOf="@id/disconnect_layout"
        app:layout_constraintStart_toStartOf="@id/disconnect_layout"
        app:layout_constraintTop_toTopOf="@id/disconnect_text" />


    <androidx.cardview.widget.CardView
        android:id="@+id/search_layout"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:foreground="@drawable/white_24"
        app:cardCornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/error_layout">
    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/search_edit"
        android:layout_width="0dp"
        android:elevation="2dp"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:layout_height="0dp"
        android:paddingStart="14dp"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_search"
        android:hint="请输入电站名称"
        android:background="@drawable/white_24"
        app:layout_constraintBottom_toBottomOf="@id/search_layout"
        app:layout_constraintEnd_toEndOf="@id/search_layout"
        app:layout_constraintStart_toStartOf="@id/search_layout"
        app:layout_constraintTop_toTopOf="@id/search_layout" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        app:layout_constraintTop_toBottomOf="@id/search_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>